{
  "name": "web3-content-monitization-integration-tests",
  "version": "1.0.0",
  "description": "Comprehensive integration tests for Web3 Content Monetization platform",
  "main": "index.js",
  "scripts": {
    "test": "./run-tests.sh",
    "test:api": "jest --config jest.api.config.js --testPathPattern=api",
    "test:e2e": "playwright test e2e/",
    "test:smoke": "jest --config jest.smoke.config.js --testPathPattern=smoke",
    "test:security": "jest --config jest.security.config.js --testPathPattern=security",
    "test:performance": "artillery run performance/load-test.yml",
    "test:ci": "npm run test:smoke && npm run test:api && npm run test:security && npm run test:e2e:ci",
    "test:e2e:ci": "playwright test e2e/ --headed=false --shard=1/3",
    "test:all": "npm run test:smoke && npm run test:api && npm run test:security && npm run test:e2e && npm run test:performance",
    "install:browsers": "playwright install",
    "report": "allure generate allure-results --clean --output test-results/allure-report && allure open test-results/allure-report",
    "report:html": "playwright show-report test-results/playwright-report",
    "report:coverage": "open coverage/lcov-report/index.html",
    "clean": "rimraf test-results allure-results coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "@stacks/transactions": "^6.15.0",
    "@stacks/network": "^6.15.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "axios": "^1.6.2",
    "mongodb-memory-server": "^9.0.0",
    "faker": "^6.6.6",
    "uuid": "^9.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "allure-playwright": "^2.9.2",
    "artillery": "^2.0.7",
    "rimraf": "^5.0.5",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/utils/test-setup.js"],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/test-results/**",
      "!**/allure-results/**"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "coverageDirectory": "coverage"
  },
  "playwright": {
    "testDir": "./e2e",
    "testMatch": "**/*.spec.js",
    "use": {
      "baseURL": "http://localhost:3000",
      "headless": true,
      "screenshot": "only-on-failure",
      "video": "retain-on-failure",
      "trace": "retain-on-failure"
    },
    "projects": [
      {
        "name": "chromium",
        "use": { "browserName": "chromium" }
      },
      {
        "name": "firefox",
        "use": { "browserName": "firefox" }
      },
      {
        "name": "webkit",
        "use": { "browserName": "webkit" }
      }
    ],
    "reporter": [
      ["list"],
      ["html", { "open": "never" }],
      ["allure-playwright"]
    ]
  }
}
